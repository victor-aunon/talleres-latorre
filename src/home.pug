extends ./layout/base
include ./layout/mixins

block content
  .container 
    .page-cover
      picture
        source(
          media="(min-width: 1000px)",
          srcset=require("./img/talleres_de_la_torre_large.jpg")
        )
        source(
          media="(min-width: 700px)",
          srcset=require("./img/talleres_de_la_torre_medium.jpg")
        )
        source(
          media="(min-width: 300px)",
          srcset=require("./img/talleres_de_la_torre_small.jpg")
        )
        img#home-image.home-image.editable(
          src=require("./img/talleres_de_la_torre_large.jpg"),
          alt="Logo de Talleres de la Torre"
        )
      h1#home-title.home-title Talleres de la Torre
      h2#home-subtitle.home-subtitle Especialistas en trabajos de chapa y pintura

    h2.section-title.fit Nuestros servicios
    p.section-text.editable Somos personal cualificado en la mecánica de chapa y pintura para la preparación y reparación de carrocerías de automóviles.
      br
      | Diplomados para el perfecto calibrado de los sistemas de asistencia a la conducción y cámaras de su vehículo.
    .services
      .service
        a(
          href="/servicios.html#calibracion",
          title="Servicios de calibración de ADAS"
        ) 
          picture
            source(
              media="(min-width: 1500px)",
              srcset=require("./img/servicios/servicio_calibrado_adas_small.jpg")
