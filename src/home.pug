extends ./layout/base
include ./layout/mixins

block content
  .container 
    .page-cover
      picture
        source(
          media="(min-width: 1000px)",
          srcset=require("./img/talleres_de_la_torre_large.jpg")
        )
        source(
          media="(min-width: 700px)",
          srcset=require("./img/talleres_de_la_torre_medium.jpg")
        )
        source(
          media="(min-width: 300px)",
          srcset=require("./img/talleres_de_la_torre_small.jpg")
        )
        img#home-image.home-image(
          src=require("./img/talleres_de_la_torre_large.jpg"),
          alt="Logo de Talleres de la Torre"
        )
      h1#home-title.home-title Talleres de la Torre
      h2#home-subtitle.home-subtitle Especialistas en trabajos de chapa y pintura

    h2.section-title Nuestros servicios
    p.section-text Somos personal cualificado en la mecánica de chapa y pintura para la preparación y reparación de carrocerías de automóviles. 
      br
      | Diplomados para el perfecto calibrado de los sensores de frenada de su vehículo.
    .services
      .service
        a(href="/servicios.html#chapa", title="Servicios de chapa") 
          picture
            source(
              media="(min-width: 900px)",
              srcset=require("./img/car_xsmall.png")
            )
            source(
              media="(min-width: 300px)",
              srcset=require("./img/car_thumbnail.png")
            )
            img.service-image(
              src=require("./img/car_small.png"),
              alt="Servicios de chapa"
            )
          p.service-title Chapa
      .service
        a(href="/servicios.html#chapa", title="Servicios de pintura") 
          picture
            source(
              media="(min-width: 900px)",
              srcset=require("./img/spray-paint_xsmall.png")
            )
            source(
              media="(min-width: 300px)",
              srcset=require("./img/spray-paint_thumbnail.png")
            )
            img.service-image(
              src=require("./img/spray-paint_small.png"),
              alt="Servicios de pintura"
            )
          p.service-title Pintura
      .service
        a(
          href="/servicios.html#chapa",
          title="Servicios de calibración de ADAS"
        ) 
          picture
            source(
              media="(min-width: 900px)",
              srcset=require("./img/calibrate_xsmall.png")
            )
            source(
              media="(min-width: 300px)",
              srcset=require("./img/calibrate_thumbnail.png")
            )
            img.service-image(
              src=require("./img/calibrate_small.png"),
              alt="Servicios de calibración de ADAS"
            )
          p.service-title Calibrado ADAS

    h2.section-title Nuestros trabajos
    .works 
      //- First work
      .work 
        .comparison-img-container
          picture 
            source(
              media="(min-width: 1000px)",
              srcset=require("./img/mustang_antes_large.jpg")
            )
            source(
              media="(min-width: 700px)",
              srcset=require("./img/mustang_antes_medium.jpg")
            )
            source(
              media="(min-width: 400px)",
              srcset=require("./img/mustang_antes_small.jpg")
            )
            source(
              media="(min-width: 200px)",
              srcset=require("./img/mustang_antes_xsmall.jpg")
            )
            img.comparison-img(
              src=require("./img/mustang_antes_large.jpg"),
              alt="Reparación costado lateral Ford Mustang"
            )

          picture 
            source(
              media="(min-width: 1000px)",
              srcset=require("./img/mustang_despues_large.jpeg")
            )
            source(
              media="(min-width: 700px)",
              srcset=require("./img/mustang_despues_medium.jpeg")
            )
            source(
              media="(min-width: 400px)",
              srcset=require("./img/mustang_despues_small.jpeg")
            )
            source(
              media="(min-width: 200px)",
              srcset=require("./img/mustang_despues_xsmall.jpeg")
            )
            img.comparison-img-overlay(
              src=require("./img/mustang_despues_large.jpeg"),
              alt="Reparación costado lateral Ford Mustang arreglado"
            )
          <input type="range" min="0" max="100" value="50" class="comparison-img-slider" autocomplete="off">
          p.comparison-tooltip Desliza el punto a derecha e izquierda
        a.comparison-show-more(href="/galeria#mustang") Ver más 🡵
